# Multi-stage build for Python backend
FROM python:3.11-slim as builder

# Set build environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy and install requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Production stage
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies (include poppler-utils for pdftotext)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements and install them system-wide
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install spaCy French model
COPY scripts/install_spacy_model.sh /tmp/install_spacy_model.sh
RUN chmod +x /tmp/install_spacy_model.sh && /tmp/install_spacy_model.sh

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 appuser && \
    mkdir -p /app/logs /app/migrations && \
    chown -R appuser:appuser /app

USER appuser

EXPOSE 5000


HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${PORT:-5000}/api/v1/health || exit 1

# Optimized for 8GB RAM / 8 vCPU Railway infrastructure
# Use 4 workers (API server doesn't need all vCPUs, save resources for Celery workers)
# Increase timeout to 600s (10 min) for large file uploads and processing
CMD ["sh", "-c", "gunicorn --worker-class eventlet -w 4 --bind 0.0.0.0:${PORT:-5000} --timeout 600 --max-requests 1000 --max-requests-jitter 100 --access-logfile - --error-logfile - run:app"]